<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/photoMovieImageView"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_image" />

        <TextView
            android:id="@+id/titleMovieTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toEndOf="@+id/photoMovieImageView"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/yearMovieTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/titleMovieTextView"
            android:layout_below="@+id/titleMovieTextView"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/overviewMovieTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/yearMovieTextView"
            android:layout_below="@+id/yearMovieTextView"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>